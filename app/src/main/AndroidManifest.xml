<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".MyMapsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoogleMapsDemos"
        tools:targetApi="31">

        <!-- API密钥占位符，由build.gradle.kts提供值 -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <!-- 主启动Activity (我们的菜单列表) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 登记我们所有的Demo Activity -->
        <activity
            android:name=".AdvancedMarkersDemoActivity"
            android:label="@string/advanced_markers_demo_label" />

        <activity
            android:name=".HeatmapDemoActivity"
            android:label="@string/heatmap_demo_label" />

        <activity
            android:name=".GeocodingDemoActivity"
            android:label="@string/geocoding_demo_label" />

        <activity
            android:name=".RoutesDemoActivity"
            android:label="@string/routes_demo_label" />

        <activity
            android:name=".StreetViewActivity" />

        <activity
            android:name=".FactCheckDemoActivity"
            android:label="@string/fact_check_demo_label" />

    </application>

</manifest>